// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  category    String
  coverImage  String?
  coverVideo  String?  // Optional video for hover/preview
  webLink     String?
  gallery     ProjectImage[]
  blocks      Block[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  layoutAlignment String @default("center") // center, left, right
  order       Int      @default(0)
  backgroundColor String? // Hex code or similar
  textColor       String? // Hex code or similar
}

model ProjectImage {
  id        String  @id @default(uuid())
  url       String
  caption   String?
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Block {
  id        String  @id @default(uuid())
  type      String  // 'text', 'image', 'video'
  content   String  // text content or url
  caption   String? 
  order     Int
  width     String  @default("full") // 'full', 'half'
  alignment String  @default("left") // 'left', 'center', 'right'
  autoplay  Boolean @default(false)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Page {
  slug      String   @id
  title     String?
  content   String   // JSON string
  updatedAt DateTime @updatedAt
}
